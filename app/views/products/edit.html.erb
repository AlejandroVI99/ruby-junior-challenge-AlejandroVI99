
<%= form_for(@product) do |f| %>

    <div class="form-row">
        <div class="form-group mb-6">
        <%= f.label :name, class: "form-label"%>
        <%= f.label @product.name, class: "form-control" %>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group mb-6">
        <%= f.label :repair_status, class: "form-label"%>
        <%= f.text_field :repair_status, class: "form-control" %>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group mb-6">
        <%= f.label :client_id, class: "form-label"%>
        <%= f.label @product.client_id, class: "form-control" %>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group mb-6">
        <%= f.label :repair_price, class: "form-label"%>
        <%= f.text_field :repair_price, class: "form-control" %>
        </div>
    </div>

    <div class="buttonSubmit">
        <%= f.submit "Guardar", class:"btn btn-primary" %>
    </div>
<% end %>