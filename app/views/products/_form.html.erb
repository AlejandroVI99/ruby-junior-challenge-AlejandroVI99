
<%= form_for(@product) do |f| %>

  <div class="form-row">
    <div class="form-group mb-6">
      <%= f.label :name, class: "form-label"%>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="buttonSubmit">
    <%= f.submit "Guardar", class:"btn btn-primary" %>
  </div>
<% end %>